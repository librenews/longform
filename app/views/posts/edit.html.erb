<% content_for :title, "Edit: #{@post.title} - Longform" %>

<% content_for :header_content do %>
  <!-- Editor Header -->
  <div style="display: flex; justify-content: space-between; align-items: center;">
    <div style="display: flex; align-items: center; gap: 1rem;">
      <%= link_to @post, role: "button", class: "outline secondary", style: "margin: 0;" do %>
        ‚Üê View Post
      <% end %>
      <%= link_to posts_path, role: "button", class: "outline secondary", style: "margin: 0;" do %>
        All Posts
      <% end %>
      <h2 style="margin: 0; font-weight: 500;">Edit Post</h2>
    </div>
    
    <div style="display: flex; align-items: center; gap: 1rem;">
      <span class="save-status" style="color: var(--pico-muted-color); font-size: 0.875rem;">
        <%= @post.updated_at > 5.minutes.ago ? "Recently saved" : "Draft saved" %>
      </span>
      <div style="width: 8px; height: 8px; background: var(--pico-secondary-color); border-radius: 50%;"></div>
    </div>
  </div>
<% end %>

<!-- Post Form -->
<%= render 'editor_form', post: @post %>
